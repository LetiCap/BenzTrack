<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFuel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <!--m-->
        <EditText
            android:id="@+id/AmountSpentOnFuel"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:hint="Amount spent on fuel..."
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/FuelCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Fuel cost..."
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/CurrentKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:hint="Current Km..."
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="100dp"

            android:text="Add" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/fuelMap"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/currentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:clickable="true"
            android:src="@drawable/baseline_gps_fixed_24" />
    </LinearLayout>


</FrameLayout>